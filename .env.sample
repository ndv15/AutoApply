# AutoApply Environment Configuration
# Copy this file to .env and fill in your values

# ===== Database Configuration =====
# PostgreSQL connection URL
# Format: postgresql+asyncpg://user:password@host:port/database
# Local development:
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/autoapply
# Production example:
# DATABASE_URL=postgresql+asyncpg://user:password@prod-db.region.rds.amazonaws.com:5432/autoapply

# Redis for caching
REDIS_URL=redis://localhost:6379/0

# ===== Security =====
# Secret key for encryption (CHANGE IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-in-production-use-random-string

# Environment
ENVIRONMENT=development  # or "production"

# ===== AI Provider API Keys =====
# Get keys from respective provider dashboards

# Anthropic Claude (https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI GPT (https://platform.openai.com/)
OPENAI_API_KEY=sk-...

# Google Gemini (https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=...

# ===== Optional: Cohere for Reranking =====
# COHERE_API_KEY=...

# ===== Logging =====
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=autoapply.log

# ===== Feature Flags =====
# Enable/disable features during development
ENABLE_AUTO_APPLY=false
ENABLE_ANALYTICS=true
ENABLE_CACHING=true

# ===== Rate Limiting =====
# Requests per minute for AI providers
ANTHROPIC_RPM=50
OPENAI_RPM=60
GEMINI_RPM=60

# ===== Cost Budgets =====
# Maximum cost per resume generation (USD)
MAX_COST_PER_RESUME=0.50
# Monthly budget cap (USD)
MONTHLY_BUDGET_CAP=100.00
